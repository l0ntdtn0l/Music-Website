<div class="mt-4">
    <h3>Update video to gallery</h3>

    <form class="mt-4" method="post" action="/courses/{{course._id}}?_method=PUT"> 
        <div class="form-group mt-4">
            <label for="name">Video's name</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
        </div>
         <div class="form-group">
            <label for="desciption">Artists's name</label>
            <input type="text" class="form-control" value="{{course.description}}" id="description" name="description">
        </div>
        <div class="form-group">
            <label for="videoID"> VideoID </label>
            <p>(https://www.youtube.com/watch?v=<nobr class="Create-video--red">VideoID</nobr>)</p>
            <input type="text" class="form-control" value="{{course.videoId}}" id="videoID" name="videoId">
        </div>

        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Submit</button>
    </form>

</div>